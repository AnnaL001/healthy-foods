<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:clickable="false">

  <TextView
      android:id="@+id/meal_type_label"
      style="@style/BoldTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/screen_margin_horizontal_double"
      android:layout_marginTop="@dimen/view_margin_vertical"
      android:layout_marginEnd="@dimen/screen_margin_horizontal_double"
      android:layout_marginBottom="@dimen/screen_margin_vertical_double"
      android:clickable="true"
      android:minHeight="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/meal_type_image"
      tools:text="@string/meal_type" />

  <ImageView
      android:id="@+id/meal_type_image"
      android:layout_width="@dimen/grid_image_width"
      android:layout_height="@dimen/grid_image_height"
      android:layout_marginStart="@dimen/screen_margin_horizontal_double"
      android:layout_marginTop="@dimen/view_margin_vertical_double"
      android:layout_marginEnd="@dimen/screen_margin_horizontal_double"
      android:clickable="true"
      android:contentDescription="@string/content_desc_meal_type"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_set_meal" />

</androidx.constraintlayout.widget.ConstraintLayout>